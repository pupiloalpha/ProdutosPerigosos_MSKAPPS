<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/Escuro</item>
        <item name="colorPrimaryDark">@color/preto</item>
        <item name="colorAccent">@color/Laranja</item>
        <item name="alertDialogTheme">@style/TemaDialogo</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <!-- Tema das caixas de diálogos -->
    <style name="TemaDialogo" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="colorAccent">@color/Laranja</item>
    </style>

    <!-- Tema das caixas de diálogos -->
    <style name="SplashScreen" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowBackground">@drawable/splash_screen</item>
    </style>

</resources>
